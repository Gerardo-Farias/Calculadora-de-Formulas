<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora_de_Fórmulas.LagrangeMain"
             BackgroundColor="Black">

    <VerticalStackLayout Padding="20">

        <Label Text="Interpolación de Lagrange"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="White"/>

        <Label Text="Ingrese el valor de X a interpolar:"
               FontSize="16"
               TextColor="White"/>
        <Entry x:Name="XValueEntry" Placeholder="Ingrese X" BackgroundColor="White" WidthRequest="200"/>

        <Label Text="Ingrese los puntos (x, f(x)):"
               FontSize="16"
               TextColor="White"/>

        <!-- Grid para los puntos -->
        <Grid x:Name="PointsGrid"
              ColumnDefinitions="Auto, Auto"
              RowDefinitions="Auto, Auto">
            <!-- Asegúrate de que haya al menos dos filas definidas -->

            <Label Text="X" TextColor="White" FontSize="18" Grid.Row="0" Grid.Column="0"/>
            <Label Text="f(X)" TextColor="White" FontSize="18" Grid.Row="0" Grid.Column="1"/>

        </Grid>

        <!-- Botones para añadir, eliminar y calcular -->
        <Button Text="Añadir Punto"
                Clicked="OnAddPointClicked"
                BackgroundColor="Gray"
                TextColor="White"
                Margin="5"/>

        <Button Text="Eliminar Último Punto"
                Clicked="OnRemovePointClicked"
                BackgroundColor="Red"
                TextColor="White"
                Margin="5"/>

        <Button Text="Calcular"
                Clicked="OnCalculateClicked"
                BackgroundColor="Blue"
                TextColor="White"
                Margin="5"/>

        <Label x:Name="ResultLabel"
               FontSize="18"
               TextColor="White"
               Text="Resultado:"
               HorizontalOptions="Center"/>

    </VerticalStackLayout>

</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora_de_Fórmulas.MainPage"
             Title="Inicio">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Calculadora de Fórmulas" 
               FontSize="24" 
               HorizontalOptions="Center" 
               FontAttributes="Bold"/>

        <Label Text="Seleccione una fórmula:" 
               FontSize="18" 
               HorizontalOptions="Center"/>

        <Button Text="Interpolación de Lagrange"
                FontSize="16"
                BackgroundColor="MediumPurple"
                TextColor="White"
                Clicked="OnLagrangeButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>